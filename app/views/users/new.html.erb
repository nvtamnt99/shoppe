<div class="container">
  <div class="row">
    <h1 class="title">Register</h1>
  </div>
  <div class="row">
    <div class="col-lg-offset-3 col-lg-6">
      <%= form_for :user, url: users_sign_up_path do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: "Enter your email", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, placeholder: "Enter your name", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: "Enter your password", class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :password_confirmation%>
        <%= f.password_field :password_confirmation, placeholder: "Enter your password_confirmation", class: "form-control" %>
      </div>
      <div class="text-center">
        <%= f.submit "register", class: "btn btn-info col-lg-12" %>
      </div>
    <% end %>
  </div>
</div>
</div>
